# FleetSentinel Configuration
# Copy to .env and configure for your environment

# Redis Configuration
REDIS_URL=redis://localhost:6379/0
REDIS_MAX_CONNECTIONS=100
REDIS_SOCKET_TIMEOUT=5.0

# Kafka Configuration (Simulated)
KAFKA_BOOTSTRAP_SERVERS=localhost:9092
KAFKA_TOPIC_REQUESTS=ride-requests
KAFKA_TOPIC_DECISIONS=sentinel-decisions
KAFKA_CONSUMER_GROUP=fleetsentinel-consumer

# Stripe Payment Configuration (Mock for development)
STRIPE_API_KEY=sk_test_your_test_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here
LIABILITY_HOLD_AMOUNT_CENTS=50000  # $500.00

# Detection Thresholds
SWARM_DETECTION_RADIUS_METERS=500
SWARM_DETECTION_TIME_WINDOW_SECONDS=300
SWARM_MIN_REQUESTS_FOR_ALERT=10
CONFIDENCE_THRESHOLD_BLOCK=0.8
CONFIDENCE_THRESHOLD_LIABILITY=0.4

# Topology Weights
WEIGHT_ARTERIAL_ROAD=0.2
WEIGHT_RESIDENTIAL=1.0
WEIGHT_DEAD_END=2.5

# Context Oracle Configuration
EVENT_API_TIMEOUT_SECONDS=2.0
NEWS_API_TIMEOUT_SECONDS=2.0
TICKETMASTER_API_KEY=your_ticketmaster_key
GDELT_API_URL=https://api.gdeltproject.org/api/v2/

# Vehicle Defense Configuration
TURTLE_MODE_SPEED_MPH=0.5
AUDIO_WARNING_DURATION_SECONDS=30
LOCKDOWN_ENABLED=true

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# Metrics
PROMETHEUS_PORT=9090
METRICS_ENABLED=true
